@using System.Diagnostics
@model BetaSigmaPhi.Web.Models.LoginModel

@{
	ViewBag.Title = "Login";
}

@section head {
}

<div class="container">
	<h2 class="text-center">@ViewBag.Title</h2>

	<div class="row">
		<div class="col-sm-4 col-sm-offset-4">
			@using (Html.BeginForm("Index", "Login", null, FormMethod.Post, new { role = "form", @class = "form-signin" })) {
				<div class="form-group">
					@Html.LabelFor(m => m.Username)
					@Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Password)
					@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
				</div>
				<div class="form-group">
					<div class="checkbox">
						<input type="checkbox" id="RememberMe" name="RememberMe" value="true" checked="@Model.RememberMe" />
						@Html.LabelFor(m => m.RememberMe)
					</div>
				</div>
				<div class="form-group">
					<input type="submit" value="Login" class="btn btn-primary btn-block" /><br />
					@if (!string.IsNullOrEmpty(Model.Message)) {
						<div class="error">
							@Model.Message
						</div>
					}
				</div>
			}
		</div>
	</div>
	
	@if (Debugger.IsAttached) {
		<div class="row">
			<p>Initializing a new database?  Look to Service/UserInitializeService.cs for the default user</p>
		</div>
	}
</div>
