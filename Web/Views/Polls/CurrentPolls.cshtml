@model List<BetaSigmaPhi.Entity.Poll>
@{
    ViewBag.Title = "Current Polls";
}

<h2>CurrentPolls</h2>

<div class="row">
    @foreach (BetaSigmaPhi.Entity.Poll p in Model)
    {
        <div class="col-md-3"> 
            @using (Html.BeginForm("SubmitPoll", "Polls", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h4>@p.Category.Name</h4>
                <hr />
                <div class="form-group">
                    @Html.Label("Elect your choice:", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Submit" />
                    </div>
                </div>
            }

        </div>
    }
</div>
